%h1 Register

= form_tag users_path, class: "form-group" do

  = label :user, :user_id, 'User-ID'
  = text_field :user, 'user_id', class: "form-control", id: 'signup_id'
  
  = label :user, :email, 'E-Mail'
  = text_field :user, 'email', class: "form-control", id: 'signup_email'
  
  %div.padded-input
  
  = submit_tag 'Create my account', class: "btn btn-primary", id: 'signup_submit'