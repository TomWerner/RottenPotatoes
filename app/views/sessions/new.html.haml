%h1 Login

= form_tag login_create_path, class: "form-group" do

  = label :user, :user_id, 'User-ID'
  = text_field :user, 'user_id', class: "form-control", id: 'login_id'
  
  = label :user, :email, 'E-Mail'
  = text_field :user, 'email', class: "form-control", id: 'login_email'

  %div.padded-input
  
  = submit_tag 'Login to my account', class: "btn btn-primary", id: 'login_submit'
  
  
= link_to 'Sign-up for an account', new_user_path, id: 'signup'